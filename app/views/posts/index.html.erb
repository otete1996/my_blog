<div class="col-md-12">
  <div class="form-inline pull-right" atyle="margin-botton: 10px;">
    <%=search_form_for @q do |f| %>
    <div class="form-group">
      <%= f.search_field :title_or_body_cont, placeholder: "タイトルから本文を検索",class: "form-control" %>
      <%= f.submit "検索",class: "btn btn-primary" %>

    </div>
    <% end %>

  </div>

</div>
<div class="col-md-8">
<% @posts.each do | post| %>
<div class="article">
  <h2>タイトル：<%= post.title %></h2>
  <p>カテゴリ：<%= post.category %></p>
  <p>作成日：<%= post.created_at %></p>
  <p><%= truncate(post.body,length: 50) %></p>
  <p><%= link_to("続きをよむ",post,class: "btn btn-default") %></p>

</div>
<% end %>
<%= paginate @posts %>
</div>

<div class="col-md-4">
  <div class="thumbnail">
    <%= image_tag(@author.image_url,alt: "著者イメージ")%>
    <div class="caption">
      <h3>著者名：<%=@author.name %></h3>
      <p>詳細：<%= @author.description %></p>
      </div>
    </div>
    <% @new_posts.each_with_index do |post,index| %>
    <%= link_to(post.title,post,class: "list-group-item") %>
    <%end %>



</div>
